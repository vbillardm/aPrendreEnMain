{% extends 'base.html.twig' %}

{% block body %}
    <h1>User</h1>

    <table>
      <thead>
        <th>Username</th>
        <th>Password</th>
        <th>email</th>
      </thead>
        <tbody>
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
        <li>
            <a href="{{ path('fos_user_security_logout') }}">Log_out</a>
        </li>
    </ul>
{% endblock %}
