{% extends 'base.html.twig' %}

{% block body %}
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="{{ path('fos_user_security_logout') }}"><button class="btn btn-danger">Déconnexion</button></a></li>
      </ul>
    </div>
  </nav>
  <div class="col-xs-12 col-md-10 col-md-offset-1">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#articles" aria-controls="profile" role="tab" data-toggle="tab">Articles</a></li>
      <li role="presentation"><a href="#utilisateurs" aria-controls="utilisateurs" role="tab" data-toggle="tab">Utilisateurs</a></li>
      <li role="presentation"><a href="#actualites" aria-controls="actualites" role="tab" data-toggle="tab">Actualités</a></li>
    </ul>

    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="articles">
      <div class="panel panel-default">
        <table class="table table-hover table-striped">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Author</th>
                  <th>Contenu</th>
                  <th>Path</th>
                  <th>Actions</th>
              </tr>
          </thead>
          <tbody>
          {% for post in posts %}
              <tr>
                  <td>{{ post.title }}</td>
                  <td>{{ post.description }}</td>
                  <td>{{ post.author }}</td>
                  <td>{{ post.contenu }}</td>
                  <td>{{ post.path }}</td>
                  <td>
                      <ul>
                          <li>
                              <a href="{{ path('post_show', { 'id': post.id }) }}">Inspecter</a>
                          </li>
                          <li>
                              <a href="{{ path('post_edit', { 'id': post.id }) }}">Éditer</a>
                          </li>
                      </ul>
                  </td>
              </tr>
          {% endfor %}
          </tbody>
        </table>
      </div>
          <a href="{{ path('post_new') }}"><button class="btn btn-primary">Créer un nouvel article</button></a>
      </div>
      <div role="tabpanel" class="tab-pane" id="utilisateurs">
      <div class="panel panel-default">
          <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.plainPassword }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('user_show', { 'id': user.id }) }}">Inspecter</a>
                            </li>
                            <li>
                                <a href="{{ path('user_edit', { 'id': user.id }) }}">Éditer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
      </div>
        <a href="{{ path('user_new') }}"><button class="btn btn-primary">Créer un nouvel utilisateur</button></a>
      </div>
      <div role="tabpanel" class="tab-pane" id="actualites">
         <table>
             <thead>
                 <tr>
                     <th>Id</th>
                     <th>Title</th>
                     <th>Path</th>
                     <th>Description</th>
                     <th>Actions</th>
                 </tr>
             </thead>
             <tbody>
             {% for news in news %}
                 <tr>
                     <td><a href="{{ path('news_show', { 'id': news.id }) }}">{{ news.id }}</a></td>
                     <td>{{ news.title }}</td>
                     <td>{{ news.path }}</td>
                     <td>{{ news.description }}</td>
                     <td>
                         <ul>
                             <li>
                                 <a href="{{ path('news_show', { 'id': news.id }) }}">show</a>
                             </li>
                             <li>
                                 <a href="{{ path('news_edit', { 'id': news.id }) }}">edit</a>
                             </li>
                         </ul>
                     </td>
                 </tr>
             {% endfor %}
             </tbody>
         </table>
         <a href="{{ path('news_new') }}">Create a new news</a>
      </div>
    </div>
  </div>
{% endblock %}
